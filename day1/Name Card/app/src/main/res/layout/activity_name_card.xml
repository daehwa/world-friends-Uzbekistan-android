<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fac3bc"
    tools:context="worldfriends.daehwa.namecard.NameCard"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="370px"
        android:layout_height="550px"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DaehwaKim\n(김대화)"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"/>
    <CheckBox
        android:id="@+id/my_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010.6860.8558"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/my_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korea / UNIST"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"/>
    <RadioButton
        android:id="@+id/my_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="daehwakim@unist.ac.kr"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/facebook_address"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/git_address"
            android:backgroundTint="#ffffff"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>
